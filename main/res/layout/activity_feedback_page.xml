<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/feedbackCover"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackPage"
    android:background="@color/absoluteBlack"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textColor="@color/textWhite"
        android:textSize="30sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/textGrey"
        ></RelativeLayout>

        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="17sp"
                android:textColor="@color/textWhite"
                />
            <EditText
                android:id="@+id/Name"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:textColor="@color/textWhite"
                android:background="@color/emphasisBlack"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textSize="17sp"
            android:textColor="@color/textWhite"
            />

        <EditText
            android:ems="10"
            android:inputType="number"
            android:id="@+id/Age"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:textColor="@color/textWhite"
            android:background="@color/emphasisBlack"
            android:layout_marginLeft="20dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textSize="17sp"
                android:textColor="@color/textWhite"
                />

            <RadioGroup
                android:id="@+id/genderGroup"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/optionMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/textWhite"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/optionFemale"
                    android:layout_marginLeft="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/textWhite"

                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="Favourite:\nTheme"
                android:textSize="17sp"
                android:textColor="@color/textWhite"
                />

            <Spinner

                android:layout_width="270dp"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"
                android:id="@+id/pickTheme"
                android:background="@color/emphasisBlack"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="What do you use our app for? "
                android:textSize="17sp"
                android:textColor="@color/textWhite"
                />
            <LinearLayout
                android:layout_width="270dp"
                android:background="@color/emphasisBlack"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Daily updates"
                    android:textColor="@color/textWhite"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Finding Recommendations"
                    android:textColor="@color/textWhite"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Checking Trends"
                    android:textColor="@color/textWhite"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Searching for new stuff"
                    android:textColor="@color/textWhite"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/textWhite"
            android:background="@color/emphasisBlack"
            android:textSize="20sp"
            android:text="Submit"
            android:clickable="true"
            android:onClick="submitForm"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_gravity="bottom"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>